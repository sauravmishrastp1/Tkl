<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/appcolor"
        android:layout_height="match_parent"
        tools:context=".view.activity.LoginActivity">
       <ImageView
               android:layout_width="200sp"
               android:id="@+id/img_logo"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="80sp"
               android:src="@drawable/tkl_logo"
                 android:layout_height="100dp"/>

       <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:id="@+id/layout"
               android:layout_below="@id/img_logo"
               android:layout_height="wrap_content">
             >
                     <EditText
                             android:layout_width="match_parent"
                             android:hint="User name"
                             android:id="@+id/username_et"
                             android:textColorHint="#ffff"
                             android:textSize="15dp"
                             android:layout_marginEnd="30sp"
                             android:layout_marginStart="30sp"
                             android:drawableStart="@drawable/user7"
                             android:drawablePadding="9sp"
                             android:fontFamily="@font/quicksand_bold"
                             android:backgroundTint="@color/white"
                             android:textColor="@color/white"
                             android:layout_height="wrap_content" tools:ignore="HardcodedText,UnusedAttribute"
                             android:drawableLeft="@drawable/user_img"/>


                     <EditText
                             android:layout_width="match_parent"
                             android:hint="Password"
                             android:layout_marginStart="30sp"
                             android:id="@+id/password_et"
                             android:textSize="15dp"
                             android:layout_marginTop="15dp"
                             android:layout_marginEnd="30sp"
                             android:textColorHint="@color/white"
                             android:drawableStart="@drawable/password8"
                             android:drawablePadding="9sp"
                             android:fontFamily="@font/quicksand_bold"
                             android:backgroundTint="@color/white"
                             android:textColor="@color/white"
                             android:layout_height="wrap_content" tools:ignore="HardcodedText,UnusedAttribute"
                             android:drawableLeft="@drawable/user_img" android:layout_marginLeft="30sp"/>


              <TextView android:layout_width="wrap_content"
                        android:text="Forget Password?"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"/>
              <ImageView android:layout_width="50dp"
                         android:id="@+id/login_button"
                         android:layout_gravity="center"
                         android:src="@drawable/loginbtn_img"
                         android:layout_marginTop="20dp"
                         android:layout_height="50dp"/>

       </LinearLayout>
       <LinearLayout android:layout_width="match_parent"
                     android:orientation="vertical"
                     android:background="@drawable/m"
                     android:layout_alignParentBottom="true"
                     android:layout_height="250sp">
              <LinearLayout android:layout_width="wrap_content"
                            android:id="@+id/register_layout"
                            android:orientation="horizontal"
                            android:layout_marginTop="170dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                     <TextView android:layout_width="wrap_content"
                               android:layout_gravity="center"
                               android:textColor="@color/Black"
                               android:fontFamily="@font/quicksand_bold"
                               android:text="@string/dont_n_have_account"
                               android:textStyle="bold"
                               android:layout_height="wrap_content"
                               tools:ignore="UnusedAttribute"/>
                     <TextView android:layout_width="wrap_content"
                               android:layout_gravity="center"
                               android:fontFamily="@font/quicksand_bold"
                               android:text="@string/sign_up"

                               android:textStyle="bold"
                               android:textColor="@color/golden"
                               android:layout_height="wrap_content" tools:ignore="UnusedAttribute"/>
              </LinearLayout>


       </LinearLayout>
<ProgressBar android:layout_width="wrap_content"
             android:id="@+id/progress_bar"
             android:visibility="gone"
             android:layout_centerInParent="true"
             android:layout_height="wrap_content"/>
</RelativeLayout>