<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="8dp"
    android:layout_height="match_parent">
    <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
                <TextView
                          android:layout_width="wrap_content"
                          android:text="Saurav mishra"
                          android:id="@+id/name_txt"
                          android:layout_marginTop="20dp"
                          android:layout_gravity="center"
                          android:textSize="15dp"
                          android:fontFamily="@font/quicksand_bold"
                          android:textColor="@color/Black"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:gravity="center"
                  android:text="Alpha 1,B-154,Greatre noida"
                  android:id="@+id/address_txt"
            android:drawablePadding="9dp"
                  android:layout_marginStart="20dp"
                  android:layout_marginEnd="20dp"
                  android:fontFamily="@font/quicksand_bold"
                  android:drawableStart="@drawable/ic_edit_location_black_24dp"
                  android:layout_marginTop="5dp"
                  android:layout_gravity="center"
                  android:textSize="15dp"
                  android:layout_height="wrap_content" android:drawableLeft="@drawable/ic_edit_location_black_24dp"/>
        <TextView android:layout_width="wrap_content"
            android:visibility="gone"
                  android:text="+91111111111"
                  android:id="@+id/phone_txt"
                  android:layout_marginTop="5dp"
                  android:layout_gravity="center"
                  android:textSize="15dp"
                android:fontFamily="@font/quicksand_bold"
                  android:drawablePadding="9dp"
                  android:drawableStart="@drawable/ic_local_phone_black_24dp"
                  android:textColor="@color/Black"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="Class-3rd,B"
                  android:layout_marginTop="5dp"
                  android:id="@+id/class_txt"
                  android:layout_gravity="center"
                  android:textSize="15dp"
                android:fontFamily="@font/quicksand_bold"
                  android:textColor="@color/Black"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:text="Subject Required"
                  android:layout_marginTop="5dp"
                  android:layout_gravity="center"
                  android:textSize="15dp"
                  android:textColor="@color/Black"
                  android:layout_height="wrap_content"/>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginEnd="30sp"
                      android:layout_marginTop="10dp"
                      android:layout_marginStart="30sp"
                      android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/subject1"
                    android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:text="maths"
                        android:id="@+id/maths"
                        android:layout_gravity="center"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content" android:gravity="start" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/subject2"
                    android:layout_marginTop="15dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:text="home science"
                        android:id="@+id/phoneNo"
                        android:layout_margin="5dp"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_height="wrap_content" android:gravity="start"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/subject1"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:text="hindi"
                        android:layout_gravity="center"

                        android:textSize="12dp"
                        android:id="@+id/emailet"
                        android:layout_margin="5dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/maven_pro"
                        android:layout_height="wrap_content"
                        android:gravity="start"/>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
        <TextView android:layout_width="wrap_content"
                  android:text="Description"
                  android:textStyle="bold"
                  android:textSize="18dp"
                  android:layout_gravity="center"
                  android:layout_marginTop="5dp"
                  android:fontFamily="@font/quicksand_bold"
                  android:textColor="@color/Black"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_gravity="center"
                  android:id="@+id/dis_txt"
                  android:layout_marginTop="10dp"
                  android:fontFamily="@font/quicksand_bold"
                  android:text=""
                  android:layout_height="wrap_content"/>

        <Button
                android:layout_width="match_parent"
                android:id="@+id/buttonedit"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:text="Call now"
                android:textColor="#fff"
                android:background="@drawable/button_background"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="20dp"
                android:layout_height="35dp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>