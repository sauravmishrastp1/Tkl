<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.Wallter_Layout">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            android:layout_height="48dp"
            app:cardBackgroundColor="@color/appcolor"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


            <ImageView
                    android:id="@+id/backbtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_arrow_back_black_24dp" tools:ignore="RtlHardcoded,VectorDrawableCompat"/>



            <TextView
                    android:id="@+id/titlletv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:fontFamily="@font/maven_pro"
                    android:textStyle="bold"
                    android:text="Add Money"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="26dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"/>

        </LinearLayout>
        <ImageView android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:foregroundGravity="center"
                android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_below="@id/toolbar"
            android:layout_height="wrap_content">


    <TextView
            android:layout_width="wrap_content"
            android:text="Add Money to Wallet"
            android:textSize="20dp"
            android:textColor="#000"
        android:visibility="gone"
            android:textStyle="bold"
            android:fontFamily="@font/maven_pro_medium"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp" />
        <TextView
        android:layout_width="wrap_content"
        android:text="Available Blance"
        android:textSize="15dp"
            android:visibility="gone"
        android:fontFamily="@font/maven_pro_medium"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">


    </TextView>

        <EditText
                android:id="@+id/nameEt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
            android:visibility="gone"
                android:layout_marginTop="40dp"
                android:drawableStart="@drawable/ic_baseline_attach_money_24"
                android:background="@drawable/button_rectangle_background"
                android:padding="10dp"
                android:elevation="1dp"
                android:fontFamily="@font/quicksand_bold"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:drawablePadding="8dp"
                android:hint="Amount"
                android:inputType="number"
                android:textColorHint="#9C9898"
                android:textSize="18sp" />

        <Button
                android:layout_width="match_parent"
                android:id="@+id/sbumitnow"
                android:background="@drawable/button_background"
                android:text="Proceed"
            android:visibility="gone"
                android:layout_below="@+id/layout"
                android:clickable="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="14sp"
                android:textColor="@color/white"
                android:layout_height="40dp"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="30dp"/>


    </LinearLayout>
</RelativeLayout>